[
  {
    "type": "effect_on_condition",
    "id": "EOC_Gamb_WoodShed",
    "effect": [
      {
        "if": { "math": [ "u_gamb_kiwood", ">", "0.4" ] },
        "then": [
          { "math": [ "u_gamb_kiwood", "-=", "0.4" ] },
          { "u_add_effect": "effect_woodshed", "duration": { "math": [ "300 +((u_gamb_woodtoken^0.2)*100)" ] } },
          { "math": [ "u_gamb_woodxp", "+=", "1" ] },
          { "math": [ "u_gamb_kiwoodcap", "+=", "0.001" ] },
          { "math": [ "u_gamb_kiwoodxreg", "+=", "0.000001" ] }
        ],
        "else": { "u_message": "You don't have enough wood ki.", "type": "bad" }
      }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_Gamb_WoodArms1",
    "effect": [
      {
        "if": { "not": { "u_has_effect": "effect_woodarms1", "bodypart": "arm_l" } },
        "then": {
          "if": { "math": [ "u_gamb_kiwood", ">", "0.4" ] },
          "then": [
            { "math": [ "u_gamb_kiwood", "-=", "0.4" ] },
            { "math": [ "u_gamb_woodxpg", "+=", "0.4" ] },
            { "math": [ "u_gamb_kiwooddrain", "+=", "0.04" ] },
            { "math": [ "u_gamb_phyxp", "+=", "0.2" ] },
            { "u_add_effect": "effect_woodarms1", "target_part": "arm_l", "duration": "PERMANENT" },
            { "u_add_effect": "effect_woodarms1", "target_part": "arm_r", "duration": "PERMANENT" }
          ],
          "else": { "u_message": "You don't have enough wood ki.", "type": "bad" }
        },
        "else": [
          { "u_lose_effect": "effect_woodarms1" },
          { "math": [ "u_gamb_woodxpg", "-=", "0.4" ] },
          { "math": [ "u_gamb_kiwooddrain", "-=", "0.4" ] },
          { "u_message": "Your arms turn back to normal" }
        ]
      }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_Gamb_WoodDrain",
    "recurrence": [ "1 s", "1 s" ],
    "condition": { "math": [ "u_gamb_kiwooddrain > 0" ] },
    "effect": [
      { "math": [ "u_gamb_kiwood", "-=", "u_gamb_kiwooddrain " ] },
      { "math": [ "u_gamb_woodxp", "+=", "u_gamb_woodxpg" ] },
      { "math": [ "u_gamb_kiwoodcap", "+=", "u_gamb_woodxpg*0.0015" ] },
      { "math": [ "u_gamb_kiwoodreg", "+=", "u_gamb_woodxpg*0.00003" ] },
      {
        "if": { "math": [ "u_gamb_kiwood", "<", "u_gamb_kiwooddrain" ] },
        "then": [
          { "u_message": "You run out of wood ki to sustain your spells.", "type": "bad" },
          { "run_eocs": [ "EOC_Gamb_KiWoodOff" ] }
        ]
      }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_Gamb_KiWoodOff",
    "effect": [
      { "u_lose_effect": "effect_woodarms1" },
      { "math": [ "u_gamb_woodxpg", "=", "0" ] },
      { "math": [ "u_gamb_kiwooddrain", "=", "0" ] }
    ]
  }
]
